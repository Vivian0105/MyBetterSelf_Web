<!DOCTYPE html>
<html>
<head>
    <title>My Better Self</title>
    <link rel="stylesheet" href="CSS/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <div class="container text-center top-container ">
        <div class="row">
            <div class="col-4 logo-container">
                <h1>MY BETTER SELF</h1>
            </div>
            <div class="col-8 nav-container">
                <ul class="nav">
                    <li class="nav-item">
                      <a class="nav-link active" aria-current="page" href="#">Daily</a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link" href="/weekly">Weekly</a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link" href="#">Monthly</a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link">Annual</a>
                    </li>
                  </ul>
            </div>
        </div>
        <p class="day"><%=day%></p>
    </div> 
    <div class="container text-center">
        <div class="row">
            <div class="col-6 daily">
                <h4>Daily TO-DO</h4>

                <div class="box">
                    <div class="item">
                        <p><input type="checkbox">⬅️ Click here if you get the job done!</p>
                    </div>
                    <% foundItem.forEach(function(item){ %>
                        <form action="/delete" method="post">
                            <div class="item">
                                <p><input type="checkbox" name="checkbox" value="<%=item._id%>" onChange="this.form.submit()"><%=item.plan%></p>
                            </div>
                        </form>
                    <% }) %>                   
                    <form class='item' action="/add" method="post">
                        <input type="text" name="todo" placeholder="New Item" autocomplete="off">
                        <button type="submit">+</button>
                    </form>
                </div>
                <button type="button" class="btn btn-info btn-sm fixbutton">Show More</button>
            </div>
            <div class="col-6 weekly">
                <h4>Weekly Plan</h4>

                <div class="box">
                    <% foundWeeklyItem.forEach(function(item){ %>
                        <form action="/delete" method="post">
                            <div class="item">
                                <p><input type="checkbox" name="checkbox" value="<%=item._id%>" onChange="this.form.submit()"><%=item.plan%></p>
                            </div>
                        </form>
                    <% }) %>                   
                    <form class='item' action="/weeklyadd" method="post">
                        <input type="text" name="weeklyplan" placeholder="New Weekly Plan" autocomplete="off">
                        <div>
                            <select class="custom-select" name="Priority">
                              <option selected>Priority</option>
                              <option value=1>Low</option>
                              <option value=2>Medium</option>
                              <option value=3>High</option>
                            </select>
                          </div>
                        <button type="submit" class="orangebutton">+</button>
                    </form>
                </div>
                <button type="button" class="btn btn-info btn-sm fixbutton orangebutton">Show More</button>
            </div>
        </div>
    </div> 
    <div class="container text-center">
        <div class="row">
            <div class="col-6 monthly">
                <h4>Monthly Plan</h4>
            </div>
            <div class="col-6 annual">
                <h4>Annual Goal</h4>
            </div>
        </div>
    </div> 
</body>


</html>
<!DOCTYPE html>
<html>
<head>
    <title>My Better Self</title>
    <link rel="stylesheet" href="CSS/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
</head>
<body>
    <div class="container text-center top-container ">
        <div class="row">
            <div class="col-4 logo-container">
                <a class="nav-link" href="/"><h1>MY BETTER SELF</h1></a>
            </div>
            <div class="col-8 nav-container">
                <ul class="nav">
                    <li class="nav-item">
                      <a class="nav-link active" aria-current="page" href="#">Daily</a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link" href="#">Weekly</a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link" href="#">Monthly</a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link">Annual</a>
                    </li>
                  </ul>
            </div>
        </div>
        <p class="day"><%=day%></p>
    </div> 
    <div class="container text-center">
        <div class="row">
            <div class="col-4 todo dropcontainer">
                <h4>To Do</h4>
                <% foundWeeklyItem.forEach(function(item){ %>
                    <p class="draggable" draggable="true"><%=item.plan%></p>
                    </form>
                <% }) %>   
                <form class='item' action="/weeklyadd" method="post">
                    <input type="text" name="weeklyplan" placeholder="New Weekly Plan" autocomplete="off">
                    <div>
                        <select class="custom-select" name="Priority">
                          <option selected>Priority</option>
                          <option value=1>Low</option>
                          <option value=2>Medium</option>
                          <option value=3>High</option>
                        </select>
                      </div>
                    <button type="submit" class="orangebutton">+</button>
                </form>                
            </div>
            <div class="col-4 inprogress dropcontainer">
                <h4>In Progress</h4>

            </div>
            <div class="col-4 done dropcontainer">
                <h4>Done</h4>

            </div>
        </div>
    </div> 
 
</body>


</html>